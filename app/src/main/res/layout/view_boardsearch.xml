<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
       android:layout_toRightOf="@+id/linear"
       android:orientation="horizontal"
       android:id="@+id/linear_two"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content">
       <TextView
           android:text="This is a Bread!"
           android:layout_width="262dp"
           android:layout_height="50dp"
           android:id="@+id/text_content" />
       <TextView
           android:text="2016.10.11"
           android:layout_width="wrap_content"
           android:layout_height="50dp"
           android:id="@+id/text_date" />
   </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:id="@id/linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ImageView
            android:background="@drawable/default_bread"
            android:id="@id/image_profile"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/text_username"
            android:layout_toEndOf="@+id/text_username" />

        <TextView
            android:layout_below="@+id/image_profile"
            android:text="bread"
            android:id="@+id/text_username"
            android:layout_width="50dp"
            android:layout_height="20dp" />
    </LinearLayout>

</RelativeLayout>