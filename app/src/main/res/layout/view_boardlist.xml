<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_stroke_square">

    <ImageView
        android:background="@drawable/shape_stroke_line"
        android:src="@drawable/default_board"
        android:id="@+id/image_board"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp" />

    <TextView
        android:background="@drawable/shape_stroke_square"
        android:textStyle="bold"
        android:textSize="15sp"
        android:singleLine="true"
        android:id="@+id/text_content"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/image_board"
        android:text="Content"
        android:gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />

    <TextView
        android:background="@drawable/shape_stroke_square"
        android:textStyle="bold"
        android:textSize="15sp"
        android:singleLine="true"
        android:id="@+id/text_reply_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image_profile"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/text_content"
        android:layout_toRightOf="@+id/image_profile"
        android:text="userName"
        android:paddingLeft="10dp"
        android:gravity="center_vertical|center_horizontal|center"
        android:layout_marginRight="20dp" />

    <ImageView
        android:background="@drawable/shape_stroke_square"
        android:layout_marginRight="20dp"
        android:src="@drawable/default_user_profile"
        android:id="@+id/image_profile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/text_content"
        android:layout_marginLeft="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/text_reply_username"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:weightSum="1">

        <TextView
            android:background="@drawable/shape_stroke_square"
            android:textStyle="bold"
            android:textSize="15sp"
            android:id="@+id/text_date"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/image_profile"
            android:layout_toLeftOf="@+id/text_reply_username"
            android:layout_toStartOf="@+id/text_reply_username"
            android:text="date"
            android:gravity="center"
            android:layout_width="50dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="0.35" />

        <ImageView
            android:background="@drawable/shape_stroke_square"
            android:id="@+id/image_comment"
            android:layout_height="50dp"
            android:layout_below="@+id/text_reply_username"
            android:layout_toEndOf="@+id/image_profile"
            android:layout_toRightOf="@+id/image_profile"
            android:src="@drawable/default_comment"
            android:layout_width="20dp"
            android:layout_weight="0.13" />

        <TextView
            android:background="@drawable/shape_stroke_square"
            android:textSize="15sp"
            android:textStyle="bold"
            android:id="@+id/text_comment_count"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/image_comment"
            android:layout_below="@+id/text_reply_username"
            android:layout_toEndOf="@+id/image_comment"
            android:layout_toRightOf="@+id/image_comment"
            android:text="TextView"
            android:gravity="center"
            android:layout_weight="0.12" />

        <ImageView
            android:background="@drawable/shape_stroke_square"
            android:layout_height="50dp"
            android:src="@drawable/default_file_image"
            android:id="@+id/image_file"
            android:layout_width="20dp"
            android:layout_weight="0.19" />

        <TextView
            android:background="@drawable/shape_stroke_square"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="fileCount"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:id="@+id/text_file_count"
            android:gravity="center"
            android:layout_weight="0.08" />
    </LinearLayout>

</RelativeLayout>