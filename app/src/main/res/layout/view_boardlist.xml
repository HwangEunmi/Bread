<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_board"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/default_bread"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/text_content"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/image_board"
        android:text="Content" />

    <TextView
        android:id="@+id/text_reply_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/image_profile"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/text_content"
        android:layout_toRightOf="@+id/image_profile"
        android:text="userName" />

    <ImageView
        android:id="@+id/image_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/text_content"
        android:background="@drawable/default_bread" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/text_reply_username"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_weight="2"
            android:id="@+id/text_date"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/image_profile"
            android:layout_toLeftOf="@+id/text_reply_username"
            android:layout_toStartOf="@+id/text_reply_username"
            android:text="date" />

        <ImageView
            android:id="@+id/image_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_reply_username"
            android:layout_toEndOf="@+id/image_profile"
            android:layout_toRightOf="@+id/image_profile"
            android:background="@drawable/default_bread" />

        <TextView
            android:layout_weight="1"
            android:id="@+id/text_comment_count"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/image_comment"
            android:layout_below="@+id/text_reply_username"
            android:layout_toEndOf="@+id/image_comment"
            android:layout_toRightOf="@+id/image_comment"
            android:text="TextView" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/default_bread"
            android:id="@+id/image_file"
            android:layout_weight="1" />

        <TextView
            android:text="fileCount"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/text_file_count"
            android:layout_weight="1" />
    </LinearLayout>

</RelativeLayout>