<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bread.hwang.bread.board.ReplyUpdateFragment">


    <LinearLayout
        android:id="@id/linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_reply_profile"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_toEndOf="@+id/text_reply_username"
            android:layout_toRightOf="@+id/text_reply_username"
            android:background="@drawable/default_bread" />

        <TextView
            android:id="@+id/text_reply_username"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_below="@+id/image_profile"
            android:text="bread" />
    </LinearLayout>


    <Button
        android:text="send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/linear"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/btn_send" />

    <EditText
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/edit_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/btn_send"
        android:layout_alignBottom="@+id/btn_send"
        android:hint="ReplyContent..."
        android:layout_width="160dp" />

</RelativeLayout>
