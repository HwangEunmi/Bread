<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.bread.hwang.bread.board.ReplyUpdateFragment">


    <LinearLayout
        android:layout_marginLeft="5dp"
        android:id="@id/linear"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_reply_profile"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_toEndOf="@+id/text_reply_username"
            android:layout_toRightOf="@+id/text_reply_username"
            android:background="@drawable/default_user_profile" />

        <TextView
            android:textStyle="bold"
           android:textSize="15sp"
            android:id="@+id/text_reply_username"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@+id/image_profile"
            android:text="bread"
            android:gravity="center" />
    </LinearLayout>


    <Button
        android:background="@drawable/btn_reply_set"
        android:text="send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/linear"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/btn_send" />

    <EditText
        android:textSize="18sp"
        android:textColorHint="@color/colorAccent"
        android:paddingLeft="10dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/shape_stroke_square"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/edit_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/btn_send"
        android:layout_alignBottom="@+id/btn_send"
        android:hint="ReplyContent..."
        android:layout_width="230dp" />

    <ImageView
        android:background="@drawable/shape_stroke_line"
        android:layout_below="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>
