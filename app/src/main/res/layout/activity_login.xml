<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.bread.hwang.bread.LoginActivity">

    <include
        android:id="@+id/toolbar_login"
        layout="@layout/view_toolbar"></include>

    <ImageView
        android:layout_marginTop="20dp"
        android:layout_below="@+id/toolbar_login"
        android:id="@+id/imageView3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/shape_stroke_square"
        app:srcCompat="@drawable/default_logo" />

    <Button
        android:id="@+id/btn_membership"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linear"
        android:layout_marginTop="46dp"
        android:background="@drawable/btn_membership"
        android:text="membership" />

    <RelativeLayout
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_stroke_square"
        android:paddingBottom="50dp"
        android:layout_below="@+id/imageView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <EditText
            android:layout_marginRight="5dp"
            android:id="@+id/edit_password"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/edit_id"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_toLeftOf="@+id/btn_login"
            android:layout_toStartOf="@+id/btn_login"
            android:background="@drawable/shape_stroke_square"
            android:ems="10"
            android:hint="@string/hint_password"
            android:inputType="number"
            android:paddingLeft="20dp"
            android:textColorHint="@color/colorAccent" />

        <Button
            android:id="@+id/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="90dp"
            android:background="@drawable/btn_login"
            android:text="login" />

        <EditText
            android:layout_marginRight="5dp"
            android:id="@+id/edit_id"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/btn_login"
            android:layout_marginLeft="10dp"
            android:layout_toLeftOf="@+id/btn_login"
            android:layout_toStartOf="@+id/btn_login"
            android:background="@drawable/shape_stroke_square"
            android:ems="10"
            android:hint="@string/hint_id"
            android:inputType="textPersonName"
            android:paddingLeft="20dp"
            android:textColorHint="@color/colorAccent" />

    </RelativeLayout>

</RelativeLayout>
